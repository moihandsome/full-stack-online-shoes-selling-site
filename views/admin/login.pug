html 
    head 
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
        link(rel='stylesheet', href='/styles/admin/login.css')
        title X-Mobie / Admin
    body
        .container
            .row
                .col-sm-9.col-md-7.col-lg-5.mx-auto
                    .card.card-signin.my-5
                        .card-body
                            h3.text-center.pb-4 X-MOBILE
                            if errors
                                each error in errors
                                    .alert.alert-danger= error
                            form.form-signin(action="/admin/login", method="post") 
                                .form-label-group
                                    input#inputUsername.form-control(name='username' type='text' placeholder='Tên đăng nhập' required='' autofocus='' 
                                    value=values ? values.username : '')
                                    label(for='inputUsername') Tên đăng nhập
                                .form-label-group
                                    input#inputPassword.form-control(name='password' type='password' placeholder='Mật khẩu' required=''
                                    value=values ? values.password : '')
                                    label(for='inputPassword') Mật khẩu
                                button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type='submit') Đăng nhập

